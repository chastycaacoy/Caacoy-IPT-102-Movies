@model BSIT3L_Movies.Models.MovieViewModel


<!DOCTYPE html>
<html>
<head>
    <title>Movie</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
        }

        h2 {
            background-color: #4CAF50;
            color: #fff;
            text-align: center;
            padding: 20px;
            margin: 0;
            font-family: 'Arial', sans-serif;
        }

        .movie-container {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            border: 1px solid #ccc;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
            overflow: hidden;
        }

        .movie-details {
            width: 50%;
            float: right;
            font-family: 'Arial', sans-serif;
        }

         .movie-details p {
            margin: 10px 0;
            font-family: 'Arial', sans-serif;
        }

        .movie-poster {
            width: 50%;
            float: left;
        }

        .trailer-link {
            margin-top: 20px;
        }

        .btn-link {
            display: inline-block;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: #fff;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            font-family: 'Arial', sans-serif;
        }
    </style>
</head>
<body>
    <h2>Movie Details</h2>
    <div class="movie-container">
        <div class="movie-details">
    <p>Movie ID: @Model.Id</p>
    <p>Movie Name: @Model.Name</p>
    <p>Rating: @Model.Rating</p>
    <p>Release Year: @Model.ReleaseYear</p>
    <p>Genre: @Model.Genre</p>
    <p>Synopsis: @Model.Description</p>
        <div class="trailer-link">
            <h3>Trailer</h3>
            <a href="@Model.TrailerUrl" class="btn-link" target="_blank">Watch Trailer</a>
        </div>
    </div>
    <div class="movie-poster">
        <h3>Movie Poster</h3>
        <img src="@Model.PosterImageUrl" alt="Movie Poster">
    </div>
    </div>

</body>
</html>