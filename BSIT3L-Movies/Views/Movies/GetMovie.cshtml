@model BSIT3L_Movies.Models.MovieViewModel


<!DOCTYPE html>
<html>
<head>
    <title>Movie</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
        }

        h2 {
            background-color: #4CAF50;
            color: #fff;
            text-align: center;
            padding: 20px;
            margin: 0;
        }

        .movie-details {
            max-width: 400px;
            margin: 20px auto;
            background-color: #fff;
            border: 1px solid #ccc;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
        }

            .movie-details p {
                margin: 10px 0;
            }   
    </style>
</head>
<body>
    <h2>Movie Details</h2>
    <div class="movie-details">
    <p>Movie ID: @Model.Id</p>
    <p>Movie Name: @Model.Name</p>
    <p>Rating: @Model.Rating</p>
    <p>Release Year: @Model.ReleaseYear</p>
    <p>Genre: @Model.Genre</p>
    </div>



</body>
</html>